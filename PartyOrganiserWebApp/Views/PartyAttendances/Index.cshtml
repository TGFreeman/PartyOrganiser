@model PartyOrganiserWebApp.ViewModels.PartyAttendantsViewModel

@{
    ViewData["Title"] = "Attendants";
}

<h1>Attendants</h1>
@if (Model.Party != null)
{
    <p>
        <a asp-controller="PartyAttendances" asp-route-partyId="@Model.Party.Id" asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                Drink
            </th>
            <th>
                Person
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Attendances)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Drink.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Person.FirstName) @Html.DisplayFor(modelItem => item.Person.LastName)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="PartyAttendances" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-controller="PartyAttendances" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
